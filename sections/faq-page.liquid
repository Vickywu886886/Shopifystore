<div class="faq">
  {% for block in section.blocks %}
    <div class="tab">
      <input
        type="checkbox"
        id="tab{{forloop.index}}"
        class="tab-toggle">
      <label for="tab{{forloop.index}}" class="tab-label">{{ block.settings.question }}</label>

      <div class="tab-content">{{ block.settings.answer }}</div>
    </div>
  {% endfor %}

</div>



{% schema %}
  {
    "name": "faq",
    "settings": [],
    "blocks": [
      {
        "type": "text",
        "name": "Q&A",
        "settings": [
          {
            "type": "text",
            "label": "Questions",
            "id": "question"
          }, {
            "type": "richtext",
            "label": "Answers",
            "id": "answer"
          }, {
            "type": "checkbox",
            "label": "Show faq",
            "id": "tab-toggle",
            "default": true
          }
        ]
      }

    ]

  }
{% endschema %}